{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "MarcoVeio",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./**/*.{js,ts,tsx,jsx} --fix && prettier --write ./**/* && tsc --noemit",
    "build": "tsc --build",
    "start": "node ./bin/src/index.js",
    "predev": "prepush install",
    "dev": "ts-node-dev ./src/index.ts",
    "migrate": "sequelize db:migrate",
    "pretest": "DB_DIALECT=sqlite sequelize db:migrate",
    "test": "DB_DIALECT=sqlite jest; DB_DIALECT=sqlite sequelize db:migrate:undo:all"
  },
  "prepush": [
    "yarn lint",
    "yarn test",
    "git add ."
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "pg": "^8.8.0",
    "sequelize": "^6.21.4",
    "sequelize-cli": "6.2.0",
    "sqlite3": "^5.0.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.2",
    "prepush": "^3.1.11",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "sequelize-typescript": "^2.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "29.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
